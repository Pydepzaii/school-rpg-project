{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build RPG Game Standard",
            "command": "gcc",
            "args": [
                "-g",
                // 1. LIỆT KÊ CÁC FILE CODE (.c)
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/intro.c",  // <--- ĐÃ BỔ SUNG FILE NÀY
                "${workspaceFolder}/src/ui_style.c",
                "${workspaceFolder}/src/player.c",
                "${workspaceFolder}/src/map.c",
                "${workspaceFolder}/src/npc.c",
                "${workspaceFolder}/src/debug.c",
                "${workspaceFolder}/src/renderer.c",
                "${workspaceFolder}/src/audio_manager.c",
                "${workspaceFolder}/src/interact.c",
                "${workspaceFolder}/src/menu_system.c",
                "${workspaceFolder}/src/settings.c",
                "${workspaceFolder}/src/dialog_system.c",
                "${workspaceFolder}/src/camera.c",
                "${workspaceFolder}/src/transition.c",
                "${workspaceFolder}/src/gameplay.c",
                "${workspaceFolder}/src/save_system.c",
                "${workspaceFolder}/src/inventory.c",
                "-o",
                "${workspaceFolder}/game.exe",

                // 2. CHỈ ĐỊNH NƠI TÌM FILE HEADER (.h)
                "-I", "${workspaceFolder}/src",      
                "-I", "${workspaceFolder}/include",  

                // 3. THƯ VIỆN LIÊN KẾT
                "-L", "${workspaceFolder}/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler for Clean Structure"
        }
    ]
}